<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/IssuesFragment">

    <fragment
        android:id="@+id/IssuesFragment"
        android:name="com.cuidedacidade.ui.issues.IssuesFragment"
        tools:layout="@layout/fragment_issues">

        <action
            android:id="@+id/action_RequestsFragment_to_CategoriesFragment"
            app:destination="@id/CategoriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/CategoriesFragment"
        android:name="com.cuidedacidade.ui.categories.CategoriesFragment"
        tools:layout="@layout/fragment_categories">

        <action
            android:id="@+id/action_CategoriesFragment_to_RequestsFragment"
            app:destination="@id/IssuesFragment" />
    </fragment>
</navigation>